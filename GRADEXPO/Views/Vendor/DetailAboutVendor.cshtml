@using GRADEXPO.Models
@model VendorFromJson.Vendor
@{
    ViewBag.Title = "Информация о поставщике";
}

<h2>Информация о поставщике</h2>

<div class="form-group">
    <fieldset>
        @Html.LabelFor(m => m.vendAccount, new { @class = "col-md-2 control-label" })
        <input class="form-control" id="readOnlyInput" type="text" placeholder=" @Model.vendAccount" readonly="">
    </fieldset>
</div>

<div class="form-group">
    <fieldset>
        @Html.LabelFor(m => m.vendorName, new { @class = "col-md-2 control-label" })
        <input class="form-control" id="readOnlyInput" type="text" placeholder=" @Model.vendorName" readonly="">
    </fieldset>
</div>

<div class="form-group">
    <fieldset>
        @Html.LabelFor(m => m.description, new { @class = "col-md-2 control-label" })
        <input class="form-control" id="readOnlyInput" type="text" placeholder=" @Model.description" readonly="">
    </fieldset>
</div>

<div class="form-group">
    <fieldset>
        @Html.ActionLink("Изменить", "EditVendor", new { vendorId = Model.vendorId }, new { @class = "btn btn-info btn-lg" })
    </fieldset>
</div>

@{Html.RenderAction("VendorContacts", "VendorContact", new { vendorId = @Model.vendorId });}

