@using GRADEXPO.Models;
@model List<VendorContactsFromJson.VendorContacts>
@{
    ViewBag.Title = "Контакты поставщика";
}
<br />
<br />
<br />
<h2>Контакты поставщика</h2>
<div class="table-responsive">
    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th scope="col">Телефон</th>
                    <th scope="col">Должность</th>
                    <th scope="col">Email</th>
                    <th scope="col">ФИО</th>
                    <th scope="col">Описание</th>
                    <th scope="col">Мессанджер</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr class="table-active">
                        <td>@Html.DisplayFor(modelItem => item.phone)</td>
                        <td>@Html.DisplayFor(modelItem => item.contactPosition)</td>
                        <td>@Html.DisplayFor(modelItem => item.email)</td>
                        <td>@Html.DisplayFor(modelItem => item.contactPerson)</td>
                        <td>@Html.DisplayFor(modelItem => item.description)</td>
                        <td>@Html.DisplayFor(modelItem => item.im)</td>
                        <td>@Html.ActionLink("Изменить", "UpdateContact", "VendorContact", new { vendorContacts = item }, new { @class = "btn btn-info btn-sm" })</td>
                    </tr>
                }
        </table>
    </div>

</div>
<br />
<br />
@Html.ActionLink("Добавить контакт", "Add", "VendorContact", new { vendorId = Model.FirstOrDefault().vendorId }, new { @class = "btn btn-primary btn-lg" })


